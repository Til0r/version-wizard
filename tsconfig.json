{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"downlevelIteration": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"paths": {
			"@version-wizard/constants/*": [
				"./src/constants/*"
			],
			"@version-wizard/items/*": [
				"./src/items/*"
			],
		}
	}
}