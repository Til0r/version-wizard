{
  "name": "version-wizard",
  "displayName": "Version Wizard",
  "description": "Streamline your frontend project management with Version Wizard, the essential extension that simplifies tagging and building new versions effortlessly.",
  "version": "1.3.0",
  "publisher": "til0r",
  "repository": {
    "type": "git",
    "url": "https://github.com/Til0r/version-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/Til0r/version-wizard/issues"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "author": {
    "name": "til0r"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "icon": "resources/icon.png",
  "keywords": [
    "tag",
    "version",
    "npm",
    "yarn",
    "pnpm"
  ],
  "activationEvents": [],
  "main": "out/extension.js",
  "pricing": "Free",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "version-wizard",
          "title": "Version Wizard",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "version-wizard",
          "name": "Version Wizard"
        }
      ]
    },
    "commands": [
      {
        "command": "version-wizard.command",
        "title": "Run Script",
        "icon": "$(run)"
      },
      {
        "command": "version-wizard.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "version-wizard.reset-preid-state",
        "title": "Reset Preid List State",
        "icon": "$(notifications-clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "version-wizard.refresh",
          "when": "view == version-wizard",
          "group": "navigation"
        },
        {
          "command": "version-wizard.reset-preid-state",
          "when": "view == version-wizard",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "version-wizard.command",
          "when": "view == version-wizard && viewItem == versionWizardTreeItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && auto-changelog",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.54.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "husky": "^8.0.0"
  },
  "homepage": "https://github.com/Til0r/version-wizard/blob/master/README.md",
  "dependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "eslint"
    ]
  }
}